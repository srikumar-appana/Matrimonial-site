                        <div class="form-group">
                            <label class="form-label" for="age">Age</label>
                            <input type="number" class="form-input" id="age" placeholder="Enter your age" min="18" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="gender">Gender</label>

    <script>
        // Sample profiles data
        let profiles = [
            {
                name: "Priya Sharma",
                age: 26,
                gender: "Female",
                interests: "Reading, Cooking, Traveling"
            },
            {
                name: "Rahul Kumar",
                age: 29,
                gender: "Male",
                interests: "Photography, Music, Sports"
            },
            {
                name: "Anjali Patel",
                age: 24,
                gender: "Female",
                interests: "Dancing, Painting, Yoga"
            },
            {
                name: "Vikram Singh",
                age: 32,
                gender: "Male",
                interests: "Business, Traveling, Technology"
            }
        ];

        // DOM Elements
        const profileForm = document.getElementById('profileForm');
        const profilesGrid = document.getElementById('profilesGrid');
        const matchesGrid = document.getElementById('matchesGrid');
        const findMatchesBtn = document.getElementById('findMatchesBtn');
        const viewAllBtn = document.getElementById('viewAllBtn');
        const notification = document.getElementById('notification');

        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            loadProfiles();
            
            // Set up event listeners
            profileForm.addEventListener('submit', registerProfile);
            findMatchesBtn.addEventListener('click', findMatches);
            viewAllBtn.addEventListener('click', loadProfiles);
            
            // Navigation buttons
            document.getElementById('heroRegisterBtn').addEventListener('click', function() {
                document.getElementById('register').scrollIntoView({ behavior: 'smooth' });
            });
            
            document.getElementById('heroBrowseBtn').addEventListener('click', function() {
                document.getElementById('profiles').scrollIntoView({ behavior: 'smooth' });
            });
            
            document.getElementById('registerBtn').addEventListener('click', function() {
                document.getElementById('register').scrollIntoView({ behavior: 'smooth' });
            });
        });

        // Load all profiles
        function loadProfiles() {
            profilesGrid.innerHTML = '';
            
            if (profiles.length === 0) {
                profilesGrid.innerHTML = '<p style="text-align: center; grid-column: 1 / -1;">No profiles registered yet.</p>';
                return;
            }
            
            profiles.forEach(profile => {
                const profileCard = createProfileCard(profile);
                profilesGrid.appendChild(profileCard);
            });
        }

        // Create profile card element
        function createProfileCard(profile) {
            const card = document.createElement('div');
            card.className = 'profile-card';
            
            const genderIcon = profile.gender === 'Male' ? 'fas fa-mars' : 'fas fa-venus';
            const iconColor = profile.gender === 'Male' ? '#2962ff' : '#d81b60';
            
            card.innerHTML = `
                <div class="profile-image" style="color: ${iconColor};">
                    <i class="${genderIcon}"></i>
                </div>
                <div class="profile-info">
                    <h3 class="profile-name">${profile.name}</h3>
                    <div class="profile-details">
                        <p><strong>Age:</strong> ${profile.age}</p>
                        <p><strong>Gender:</strong> ${profile.gender}</p>
                    </div>
                    <p class="profile-interests"><strong>Interests:</strong> ${profile.interests}</p>
                </div>
            `;
            
            return card;
        }

        // Register a new profile
        function registerProfile(event) {
            event.preventDefault();
            
            const name = document.getElementById('name').value;
            const age = parseInt(document.getElementById('age').value);
            const gender = document.getElementById('gender').value;
            const interests = document.getElementById('interests').value;
            
            // Age validation
            if (age < 18) {
                showNotification('You must be 18 years or older to register.', 'error');
                return;
            }
            
            // Create new profile
            const newProfile = {
                name,
                age,
                gender,
                interests
            };
            
            // Add to profiles array
            profiles.push(newProfile);
            
            // Reset form
            profileForm.reset();
            
            // Show success message
            showNotification('Profile registered successfully!', 'success');
            
            // Reload profiles
            loadProfiles();
        }

        // Find matches based on criteria
        function findMatches() {
            const preferredGender = document.getElementById('preferredGender').value;
            const minAge = parseInt(document.getElementById('minAge').value);
            const maxAge = parseInt(document.getElementById('maxAge').value);
            
            // Validate minimum age
            if (minAge < 18) {
                showNotification('Minimum age must be 18 years or older.', 'error');
                return;
            }
            
            // Clear previous matches
            matchesGrid.innerHTML = '';
            
            // Filter profiles based on criteria
            const matches = profiles.filter(profile => 
                profile.gender === preferredGender && 
                profile.age >= minAge && 
                profile.age <= maxAge
            );
            
            // Display matches
            if (matches.length === 0) {
                matchesGrid.innerHTML = '<p style="text-align: center; grid-column: 1 / -1;">No matches found for your criteria.</p>';
                return;
            }
            
            matches.forEach(profile => {
                const profileCard = createProfileCard(profile);
                matchesGrid.appendChild(profileCard);
            });
            
            showNotification(`Found ${matches.length} matches!`, 'success');
        }

        // Show notification
        function showNotification(message, type) {
            notification.textContent = message;
            notification.className = `notification ${type}`;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }
    </script>
</body>
</html>
